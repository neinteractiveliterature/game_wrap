bootstrapVersion: 3
styleLoaders: ['style', 'css', 'sass']

bootstrapCustomizations: ./source/stylesheets/bootstrap-customizations.scss
appStyles: ./source/stylesheets/app-styles.scss

# If Bootstrap version 3 is used - turn on/off custom icon font path
useCustomIconFontPath: true

### Bootstrap styles
styles:

  # Mixins
  mixins: true

  # Reset and dependencies
  normalize: true
  print: true
  glyphicons: true

  # Core CSS
  scaffolding: true
  type: true
  code: true
  grid: true
  tables: true
  forms: true
  buttons: true

  # Components
  component-animations: true
  dropdowns: true
  button-groups: false
  input-groups: true
  navs: true
  navbar: true
  breadcrumbs: false
  pagination: false
  pager: false
  labels: true
  badges: true
  jumbotron: true
  thumbnails: false
  alerts: true
  progress-bars: false
  media: false
  list-group: false
  panels: true
  wells: false
  responsive-embed: false
  close: false

  # Components w/ JavaScript
  modals: false
  tooltip: false
  popovers: false
  carousel: false

  # Utility classes
  utilities: true
  responsive-utilities: true

scripts: false
