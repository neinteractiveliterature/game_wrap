!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"}
    %title= [current_page.data.title, "Game Wrap"].compact.join(" - ")
    = stylesheet_link_tag "all"
    = javascript_include_tag  "all"

  %body{class: page_classes}
    .jumbotron.hidden-xs
      %h1 Game Wrap

    %nav.navbar-default
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{type: "button", "data-toggle" => "collapse", "data-target" => "#main-navbar-collapse"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
      
          %a.navbar-brand.visible-xs-inline{href: "/"} Game Wrap

        .collapse.navbar-collapse#main-navbar-collapse
          %ul.nav.navbar-nav
            = navbar_item current_page, "Home", "/"
            = navbar_item current_page, "Submissions", "/submissions/"
            = navbar_item current_page, "About Us", "/about/"
    
    .container
      = yield